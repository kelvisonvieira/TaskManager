<h1>Todas as tasks</h1>
<ul class="task-list">
    {{#each tasks}}
    <li>
         {{#if this.done}}
         <a href="/" class="done">{{this.title}}</a>
          {{else}}
           <a href="/" class="title">{{this.title}}</a>
         {{/if}}
     <div class="actions">
        <form action="/tasks/updatestatus" method="POST">
               <input type="hidden" name="id" value="{{this.id}}">
               <input type="hidden" name="done" value="{{this.done}}">
            <button type="submit">
               <i class="bi bi-check2"></i>
            </button>
         
               <a href="/tasks/edit/{{this.id}}"><i class="bi bi-pencil-square"></i></a>
               <a href="/tasks/delete/{{this.id}}" ><i class="bi bi-x-lg"></i></a>
          </form>
         </div>
    </li>
    {{/each}}
</ul>